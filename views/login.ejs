        :root {

            --brand: #ff3360;

        }

        body {

            font-family: 'Plus Jakarta Sans', sans-serif;

            background-color: #f8fafc;

            background-image: linear-gradient(135deg, #f8fafc, #f1f5f9);

            min-height: 100vh;

            display: flex;

            align-items: center;

            justify-content: center;

        }

        .login-card {

